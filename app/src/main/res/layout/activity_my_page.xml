<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyPageActivity">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_add_Munpia"
        android:background="#000000"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:gravity="center_vertical">

        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/upButton_Munpia"
                android:clickable="true"
                android:onClick="clickUpButton"
                android:src="@drawable/upbutton_w"
                android:layout_width="40dp"
                android:layout_height="40dp"/>

            <TextView
                android:text="My Page"
                android:textStyle="bold"
                android:textSize="22sp"
                android:textColor="#FFFFFF"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/addButton_Munpia"
                android:text="로그아웃"
                android:onClick="clickLogout"
                android:layout_marginRight="10dp"
                android:backgroundTint="@color/colorAccent"
                android:textColor="#ffffffff"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>


    <RelativeLayout
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <com.pkmmte.view.CircularImageView
            android:id="@+id/iv_pro"
            android:src="@drawable/moon"
            android:layout_width="70dp"
            android:layout_height="70dp"/>

        <TextView
            android:id="@+id/tv_pro"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/iv_pro"
            android:layout_centerVertical="true"
            android:text="wjsthd20@naver.com"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </RelativeLayout>

    <Button
        android:onClick="clickMyRecommend"
        android:text="나의 추천글"
        android:padding="16dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:backgroundTint="@color/colorAccent"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:onClick="clickMyfavorite"
        android:text="공감한 추천글"
        android:padding="16dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:backgroundTint="@color/colorAccent"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


<!--    todo 그래프사용해서 활동기록 표현    -->

</LinearLayout>