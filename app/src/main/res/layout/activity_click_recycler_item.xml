<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ClickRecyclerItemActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_add"
        android:background="#979797"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:gravity="center_vertical">

        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/upButton"
                android:clickable="true"
                android:onClick="clickUpButton"
                android:src="@drawable/ic_chevron_left_black_24dp"
                android:layout_width="40dp"
                android:layout_height="40dp"/>

            <TextView
                android:text="추 천 글"
                android:textStyle="bold"
                android:textSize="22sp"
                android:textColor="#ff000000"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/mainpage2"
                android:clickable="true"
                android:onClick="clickMain"
                android:layout_marginRight="20dp"
                android:src="@drawable/ic_home_black_24dp"
                android:layout_width="40dp"
                android:layout_height="40dp"/>


        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"        >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_recyclerItem_kategorie"
                    android:text="카테고리"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#6CADD3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tv_recyclerItem_title"
                    android:text="추천글 제목"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_report_red_24dp"
                    android:clickable="true"
                    android:onClick="clickReport"
                    android:layout_width="18dp"
                    android:layout_height="18dp"/>

                <TextView
                    android:clickable="true"
                    android:onClick="clickReport"
                    android:textSize="18sp"
                    android:text="신고"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="4dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/recommendID"
                    android:text="작성자 아이디"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:background="#959595"
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/recommendDate"
                    android:text="2020.07.06"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_marginLeft="4dp"
                    android:background="#959595"
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_marginLeft="4dp"
                    android:id="@+id/recommendViews01"
                    android:text="조회수 "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/recommendViews02"
                    android:text="480"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_marginLeft="4dp"
                    android:background="#959595"
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_marginLeft="4dp"
                    android:id="@+id/recommendFavorites"
                    android:text="공감수 "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/recommendFavorite"
                    android:text="26"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_marginLeft="4dp"
                    android:background="#959595"
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_marginTop="8dp"
                android:background="#9C9C9C"
                android:layout_height="1dp"/>

            <RelativeLayout
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:clickable="true"
                    android:onClick="bigImg"
                    android:id="@+id/bookimg_view"
                    android:src="@drawable/kakaopage"
                    android:layout_width="130dp"
                    android:layout_height="130dp"/>

                <TextView
                    android:id="@+id/bookName_view"
                    android:text="도서명"
                    android:textColor="#ff555555"
                    android:textSize="22sp"
                    android:maxLines="1"
                    android:textStyle="bold"
                    android:layout_toRightOf="@id/bookimg_view"
                    android:layout_margin="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/authorname_view"
                    android:layout_margin="16dp"
                    android:text="저자명"
                    android:maxLines="1"
                    android:layout_toRightOf="@id/bookimg_view"
                    android:layout_below="@id/bookName_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:background="#9C9C9C"
                android:layout_height="1dp"/>

            <TextView
                android:layout_margin="16dp"
                android:id="@+id/msg_view"
                android:background="#E6E1BF"
                android:text="추천글 본문"
                android:gravity="top"
                android:textSize="17sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:padding="8dp"
                    android:id="@+id/det_view"
                    android:clickable="true"
                    android:onClick="clickDet"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_chat_02"
                    app:civ_border_width="16dp"
                    app:civ_border_color="#53CF5A"
                    app:civ_circle_background_color="#53CF5A"
                    android:layout_width="100dp"
                    android:layout_height="100dp"/>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:clickable="true"
                    android:padding="8dp"
                    android:onClick="clickThumb"
                    android:id="@+id/thumb_view"
                    android:layout_marginRight="10dp"
                    app:civ_border_width="16dp"
                    app:civ_border_color="#4496D5"
                    app:civ_circle_background_color="#4496D5"
                    android:src="@drawable/ic_thumb_up_24dp"
                    android:layout_width="100dp"
                    android:layout_height="100dp"/>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/go_recommend_view"
                    android:padding="8dp"
                    android:clickable="true"
                    android:onClick="clickGoRecommend"
                    android:src="@drawable/ic_library_24dp"
                    app:civ_border_color="#B478D5"
                    app:civ_circle_background_color="#B478D5"
                    app:civ_border_width="16dp"
                    android:layout_width="100dp"
                    android:layout_height="100dp"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>