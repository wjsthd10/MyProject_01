<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp"
    app:cardBackgroundColor="#7BABDFF1"
    android:elevation="2dp"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginBottom="8dp">

    <RelativeLayout
        android:id="@+id/munpia_item_layout"
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/munpia_item_iv"
            android:src="@drawable/moon"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:layout_width="80dp"
            android:layout_height="95dp"/>

        <TextView
            android:id="@+id/munpia_item_title"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/munpia_item_iv"
            android:text="추천글 제목 표기란"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#ff000000"
            android:layout_width="200dp"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:id="@+id/munpia_DB_item_list"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/munpia_item_iv"
            android:layout_below="@id/munpia_item_title"
            android:orientation="horizontal"
            android:layout_width="300dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/munpia_DB_Kategorie"
                android:textSize="13sp"
                android:layout_marginRight="5dp"
                android:text="kategorie"
                android:maxLines="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/munpia_line1"
                android:background="#ACACAC"
                android:layout_marginRight="5dp"
                android:maxLines="1"
                android:layout_width="1dp"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/munpia_DB_bookName"
                android:layout_marginRight="5dp"
                android:textSize="13sp"
                android:text="bookName"
                android:maxLines="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/munpia_line2"
                android:background="#ACACAC"
                android:layout_marginRight="5dp"
                android:layout_width="1dp"
                android:maxLines="1"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/munpia_DB_date"
                android:layout_marginRight="5dp"
                android:textSize="13sp"
                android:text="07.02"
                android:maxEms="5"
                android:maxLines="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/munpia_line3"
                android:background="#ACACAC"
                android:layout_marginRight="5dp"
                android:layout_width="1dp"
                android:maxLines="1"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/munpia_views"
                android:layout_marginRight="5dp"
                android:text="views : "
                android:textSize="13sp"
                android:maxLines="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/munpia_DB_views"
                android:layout_marginRight="5dp"
                android:textSize="13sp"
                android:text="200,000"
                android:maxLines="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </LinearLayout>


    </RelativeLayout>

</androidx.cardview.widget.CardView>