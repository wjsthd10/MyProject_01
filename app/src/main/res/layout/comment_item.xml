<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/comment_id"
        android:textSize="14sp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:textColor="#ff000000"
        android:text="작성자 아이디"
        android:padding="3dp"
        android:background="@drawable/bg_edit01"
        android:maxLines="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/comment_date"
        android:text="20.07.06"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/comment_msg"
        android:text="댓글 내용"
        android:layout_marginBottom="10dp"
        android:textStyle="bold"
        android:textSize="17sp"
        android:maxEms="500"
        android:maxLines="8"
        android:textColor="#ff000000"
        android:layout_below="@id/comment_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/comment_reportIV"
        android:layout_marginTop="4dp"
        android:layout_below="@id/comment_msg"
        android:src="@drawable/ic_report_red_24dp"
        android:clickable="true"
        android:layout_width="18dp"
        android:layout_height="18dp"/>

    <TextView
        android:id="@+id/comment_reportTV"
        android:layout_below="@id/comment_msg"
        android:layout_toRightOf="@id/comment_reportIV"
        android:clickable="true"
        android:onClick="clickReport"
        android:textSize="18sp"
        android:text="신고"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/comment_notgood"
        android:layout_marginTop="4dp"
        android:layout_marginRight="4dp"
        android:src="@drawable/ic_thumb_down_comment"
        android:layout_below="@id/comment_msg"
        android:layout_toLeftOf="@id/comment_notgood_tv"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:clickable="true"/>

    <TextView
        android:id="@+id/comment_notgood_tv"
        android:layout_alignParentRight="true"
        android:layout_below="@id/comment_msg"
        android:text="반대"
        android:textSize="18sp"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/comment_good"
        android:layout_marginTop="4dp"
        android:layout_marginRight="4dp"
        android:src="@drawable/ic_thumb_up_comment"
        android:layout_below="@id/comment_msg"
        android:layout_toLeftOf="@id/comment_good_tv"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:clickable="true"/>

    <TextView
        android:id="@+id/comment_good_tv"
        android:layout_marginRight="12dp"
        android:layout_toLeftOf="@id/comment_notgood"
        android:layout_below="@id/comment_msg"
        android:text="추천"
        android:textSize="18sp"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/comment_line"
        android:layout_marginTop="16dp"
        android:background="#ff888888"
        android:layout_below="@id/comment_good_tv"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>



</RelativeLayout>